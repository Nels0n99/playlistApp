doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    nav
      div.container
        h3 My Playlist
        ul
          if user
            li
              div Hello #{user.displayName}
            li
              a(href="/logout") Logout
          else
            li
              a(href="/login") Login
            li
              a(href="/register") Register

    div.container
      block content
