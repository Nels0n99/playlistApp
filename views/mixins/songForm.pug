mixin songForm(song, actionURL, mode, title)

    div.content
        div.form-header= title
            div.space
            div
                form(action=actionURL method='post')
                    div.input-container
                        label(for='song_time') Song Length:
                        input(type='text' id='song_time' name='song_time' value=song.song_time)
                    div.input-container
                        label(for='image') Song Image URL:
                        input(type='text' id='image' name='image' value=song.image)
                    div.input-container
                        label(for='song_title') Song Title:
                        input(type='text' id='song_title' name='song_title' value=song.song_title)
                    div.input-container
                        label(for='artist_name') Song Artist's Name:
                        input(type='text' id='artist_name' name='artist_name' value=song.artist_name)
                    div.button-row
                        a.button.cancel(href='/') Cancel
                        if (mode==='edit')
                            a.button.delete(href=`/delete/${song.id}`) Delete
                        button.button.primary(type='submit') Submit